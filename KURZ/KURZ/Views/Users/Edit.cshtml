@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "_Admin";
}
<div class="page-separator">
    <div class="page-separator__text">user2</div>
</div>
<div class="card js-overlay card-sm overlay--primary-dodger-blue stack stack--1">
    <div class="card-body d-flex flex-column">
        <form asp-action="Edit" class="align-items-center">
            <div class="flex"
                 style="max-width: 100%">

                <div class="form-group">
                    <label class="form-label"
                           for="identificacion">Identificación:</label>
                    <input type="text"
                           class="form-control"
                           id="identificacion"
                           value="306640235">
                </div>
                <div class="form-group">
                    <label class="form-label"
                           for="usuario">Usuario:</label>
                    <input type="text"
                           class="form-control"
                           id="usuario"
                           value="user2">
                </div>
                <div class="form-group">
                    <label class="form-label"
                           for="nombre">Nombre:</label>
                    <input type="text"
                           class="form-control"
                           id="nombre"
                           value="Usuario2">
                </div>
                <div class="form-group">
                    <label class="form-label"
                           for="apellidos">Apellidos:</label>
                    <input type="text"
                           class="form-control"
                           id="apellidos"
                           value="Usuario2 Usuario2">
                </div>
                <div class="form-group">
                    <label class="form-label"
                           for="email">Correo Electrónico:</label>
                    <input type="email"
                           class="form-control"
                           id="email"
                           value="usuario@usuario.com">
                </div>
                <button type="submit"
                        class="btn btn-primary">
                    Editar
                </button>
                <a asp-controller="Users" asp-action="Index" class="btn btn-accent">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
