@model KURZ.Entities.Users
@{
    ViewData["Title"] = "Perfil";
    Layout = "_Teacher";
}
<div class="page-section bg-secondary">
    <div class="container page__container d-flex flex-column flex-md-row align-items-center text-center text-md-left">
        <img src="~/images/guy-3.jpg" class="mr-md-32pt mb-32pt mb-md-0 rounded-circle border-3"
             alt="instructor" />
        <div class="flex mb-32pt mb-md-0">
            <h2 class="text-white mb-0">Profesor @Model.NAME @Model.LASTNAME</h2>
            <div class="rating mb-16pt d-inline-flex">
                <div class="rating__item"><i class="material-icons">star</i></div>
                <div class="rating__item"><i class="material-icons">star</i></div>
                <div class="rating__item"><i class="material-icons">star</i></div>
                <div class="rating__item"><i class="material-icons">star</i></div>
                <div class="rating__item"><i class="material-icons">star_border</i></div>
                <span class="ml-1 text-white">4,3</span>
            </div>

        </div>
        <a asp-controller="Teacher" asp-action="Edit"
           class="btn btn-outline-white">Editar</a>
    </div>
</div>

<div class="page-section bg-white border-bottom-2">
    <div class="container page__container">
        <div class="row">
            <div class="col-md-12">
                <h4>Perfil</h4>
                <p>@Model.PROFILE</p>
                <h4>Identificación</h4>
                <p>@Model.IDENTICATION</p>
                <h4>Correo Electrónico</h4>
                <p>@Model.EMAIL</p>
                <h4>País</h4>
                <p><select class="form-control" asp-for="ID_COUNTRY" disabled ="true">
                    @foreach (var countries in ViewBag.countries)
                    {
                        <option value="@countries.ID_COUNTRY"> @countries.NAME</option>
                    }
                </select></p>
            </div>
        </div>
    </div>
</div>

