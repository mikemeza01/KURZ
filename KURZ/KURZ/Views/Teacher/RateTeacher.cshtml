@model KURZ.Entities.TeacherGradesView
@{
    ViewData["Title"] = "Calificar Profesor";
    Layout = "_TeacherH";
}

@if (Model == null)
{
    @switch (Convert.ToInt32(ViewData["Error"]))
    {
        case 1:
            <h3>Identicador no es valido o no se encontro</h3>
            break;
        case 2:
            <h3>El usuario que busca no fue encontrado</h3>
            break;
    }
}
else
{

    <div class="row">
    <div class="col-md-8 p-0 mb-5">
        <div class="card js-overlay card-sm overlay--primary-dodger-blue stack stack--1">
            <div class="card-body d-flex flex-column">
                 <form asp-action="EditAccount" class="align-items-center" enctype="multipart/form-data">
                <div class="col-md-12 p-0">
                    <div asp-validation-summary="ModelOnly"></div>
                    @* ID *@
                    <input asp-for="ID_TEACHER" type="hidden" class="form-control" readonly />
                    @* NOTA *@
                    <div class="form-group">
                        <label class="form-label" for="Nota">Nota</label>
                        <input type="text" id="Nota" name="Nota" class="form-control" placeholder="Ingrese una nota con la cual desea calificar al profesor" />
                    </div>
                    @* COMENTARIO *@
                    <div class="form-group">
                        <label class="form-label" for="Comentario">Comentario</label>
                        <textarea id="Comentario" name="Comentario" class="form-control" placeholder="Ingrese un comentario adicional"></textarea>
                    </div>
                    @* ESTUDIANTE *@
                    @* <div class="form-group">
                        <label class="form-label" for="Estudiante">Estudiante</label>
                         <input asp-for="StudentName" type="text" class="form-control" readonly="readonly" />
                    </div> *@
                    @* PROFESOR *@
                    @* <div class="form-group">
                        <label class="form-label" for="Profesor">Profesor</label>
                        <input asp-for="TeacherName" type="text" class="form-control" readonly="readonly" />
                    </div> *@
                    @* TEMA *@
                    @* <div class="form-group">
                        <label class="form-label" for="Tema">Tema</label>
                        <input type="text" id="Tema" name="Tema" class="form-control" />
                    </div> *@
                    @* CATEGORIA *@
                    @* <div class="form-group">
                        <label class="form-label" for="Categoria">Categoría</label>
                        <input type="text" id="Categoria" name="Categoria" class="form-control" />
                    </div> *@
                    @* SUBCATEGORIA *@
                    @* <div class="form-group">
                        <label class="form-label" for="Subcategoria">Subcategoría</label>
                        <input type="text" id="Subcategoria" name="Subcategoria" class="form-control" />
                    </div> *@
                    <div class="form-group buttons">
                        <a asp-controller="Student" asp-action="MyAccount" class="btn btn-accent">
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                           Enviar calificación
                        </button>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h3 class="card-title mb-3">Datos de la asesoría</h3>
                 <label class="form-label" for="Profesor">Profesor:</label>
                <p class="card-subtitle text-70 mb-3">Profesor J Cubero</p>
                <label class="form-label" for="Tema">Tema:</label>
                <p class="card-subtitle text-70 mb-3">Lineales</p>
                <label class="form-label" for="Categoria">Categoria:</label>
                <p class="card-subtitle text-70 mb-3">Matematica</p>
            </div>
        </div>
    </div>
</div>
}