@{
    ViewData["Title"] = "Registro de Profesores";
    Layout = "_Authentication";
}
<form asp-action="RegisterTeachers" novalidate>
    <div class="form-group">
        <label class="text-label"
               for="email_2">Correo Electrónico:</label>
        <div class="input-group input-group-merge">
            <input id="email_2"
                   type="email"
                   required=""
                   name="email"
                   class="form-control form-control-prepended"
                   placeholder="ejemplo@kurz.com">
        </div>
    </div>
    <div class="form-group">
        <label class="text-label"
               for="first_name">Nombre:</label>
        <div class="input-group input-group-merge">
            <input id="first_name"
                   type="text"
                   required=""
                   class="form-control form-control-prepended"
                   placeholder="Juan">
        </div>
    </div>
    <div class="form-group">
        <label class="text-label"
               for="last_name">Apellidos:</label>
        <div class="input-group input-group-merge">
            <input id="last_name"
                   type="text"
                   required=""
                   class="form-control form-control-prepended"
                   placeholder="Pérez Gonzalez">
        </div>
    </div>
    <div class="form-group">
        <label class="text-label"
               for="user">Usuario:</label>
        <div class="input-group input-group-merge">
            <input id="user"
                   type="text"
                   required=""
                   class="form-control form-control-prepended"
                   placeholder="juan_perez">
        </div>
    </div>
    <div class="form-group">
        <label class="text-label"
               for="password">Contraseña:</label>
        <div class="input-group input-group-merge">
            <input id="password"
                   type="password"
                   required=""
                   class="form-control form-control-prepended"
                   placeholder="Ingrese su contraseña">
  
        </div>
    </div>
    <div class="form-group">
        <label class="text-label"
               for="confirm_password">Confirmar Contraseña:</label>
        <div class="input-group input-group-merge">
            <input id="confirm_password"
                   type="password"
                   required=""
                   class="form-control form-control-prepended"
                   placeholder="Ingrese su contraseña">

        </div>
    </div>
    <div class="form-group mb-5">
        <div class="custom-control custom-checkbox">
            <input type="checkbox"
                   checked=""
                   class="custom-control-input"
                   id="terms" />
            <label class="custom-control-label"
                   for="terms">Acepto los <a href="#">Términos y Condiciones</a></label>
        </div>
    </div>
    <div class="form-group text-center">
        <button class="btn btn-primary mb-2"
                type="submit">
            Crear cuenta de Profesor(a)
        </button><br>
        <a class="text-body text-underline"
           asp-controller="Authentication" asp-action="Login">¿Ya tiene una cuenta? Iniciar Sesión</a>
    </div>
</form>