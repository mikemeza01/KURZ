@model KURZ.Entities.Users
@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "_TeacherH";
}
<div class="col-md-7 p-0">
    <form asp-action="Edit">

        <div class="form-group">
            <label class="form-label">Foto</label>
            <div class="media align-items-center">
                <a href=""
                   class="media-left mr-16pt">
                    <img src="~/images/guy-3.jpg"
                         alt="people"
                         width="56"
                         class="rounded-circle" />
                </a>
                <div class="media-body">
                    <div class="custom-file">
                        <input type="file"
                               class="custom-file-input"
                               id="inputGroupFile01">
                        <label class="custom-file-label"
                               for="inputGroupFile01">Elegir Foto</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NAME" class="form-label">Nombre:</label>
            <input asp-for="NAME" class="form-control" />
            <span asp-validation-for="NAME" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LASTNAME" class="control-label">Apellidos:</label>
            <input asp-for="LASTNAME" class="form-control" />
            <span asp-validation-for="LASTNAME" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PROFILE" class="control-label">Perfil</label>
            <input rows="5" asp-for="PROFILE" class="form-control" />
            <span asp-validation-for="PROFILE" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="ID_COUNTRY"></label>
            <select class="form-control" asp-for="ID_COUNTRY">
                @foreach (var countries in ViewBag.countries)
                {
                    <option value="@countries.ID_COUNTRY"> @countries.NAME</option>
                }
            </select>
        </div>
        <button type="submit"
                class="btn btn-primary">
            Guardar Cambios
        </button>
    </form>
</div>
