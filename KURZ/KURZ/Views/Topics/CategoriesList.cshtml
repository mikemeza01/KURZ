@{
    ViewData["Title"] = "Categorías";
    Layout = "_Admin";
}
<div class="row mb-2">
    <div class="col-auto">
        <a class="btn btn-outline-primary" asp-controller="Topics" asp-action="CreateCategorie">Crear Categoría</a>
    </div>
</div>
<div class="card mb-lg-32pt">
    <div class="table-responsive"
         data-toggle="lists"
         data-lists-sort-by="js-lists-values-date"
         data-lists-sort-desc="true"
         data-lists-values='["js-lists-values-name", "js-lists-values-department", "js-lists-values-status", "js-lists-values-type", "js-lists-values-phone", "js-lists-values-date"]'>

        <table class="table mb-0 thead-border-top-0 table-nowrap">
            <thead>
                <tr>

                    <th>
                        <a href="javascript:void(0)"
                           class="sort"
                           data-sort="js-lists-values-name">Categoría</a>
                    </th>

                    <th style="width: 150px;">
                        <a href="javascript:void(0)"
                           class="sort"
                           data-sort="js-lists-values-department">Subcategorías</a>
                    </th>

                    <th style="width: 48px;">
                        <a href="javascript:void(0)"
                           class="sort"
                           data-sort="js-lists-values-status">Descripción</a>
                    </th>

                    <th style="width: 48px;">
                        <a href="javascript:void(0)"
                           class="sort"
                           data-sort="js-lists-values-date">Acciones</a>
                    </th>
                    <th style="width: 24px;"></th>
                </tr>
            </thead>
            <tbody class="list"
                   id="users">

                <tr>

                    <td>

                        <small class="js-lists-values-type text-50">Matématica</small>

                    </td>

                    <td>
                        <ul class="js-lists-values-type text-50">
                            <li>Trigonometría</li>
                            <li>Algebra</li>
                        </ul>
                    </td>

                    <td>
                        <small class="js-lists-values-type text-50">Esta es la categoría de matematicas</small>
                    </td>

                    <td>
                        <a class="btn btn-primary" asp-controller="Topics" asp-action="EditCategorie">
                            <i class="material-icons">create</i>
                        </a>

                        <a class="btn btn-accent" asp-controller="Topics" asp-action="DeleteCategorie">
                            <i class="material-icons">close</i>
                        </a>
                    </td>
                    <td class="text-right">
                    </td>
                </tr>

                <tr>

                    <td>

                        <small class="js-lists-values-type text-50">Ciencias</small>

                    </td>

                    <td>

                        <ul class="js-lists-values-type text-50">
                            <li>Física</li>
                            <li>Biología</li>
                            <li>Química</li>
                        </ul>

                    </td>

                    <td>
                        <small class="js-lists-values-type text-50">Esta la categoría de ciencias</small>
                    </td>

                    <td>
                        <a class="btn btn-primary" asp-controller="Topics" asp-action="EditCategorie">
                            <i class="material-icons">create</i>
                        </a>

                        <a class="btn btn-accent" asp-controller="Topics" asp-action="DeleteCategorie">
                            <i class="material-icons">close</i>
                        </a>
                    </td>
                    <td class="text-right">
                    </td>
                </tr>

                <tr>

                    <td>

                        <small class="js-lists-values-type text-50">Ciencias Sociales</small>

                    </td>

                    <td>

                        <ul class="js-lists-values-type text-50">
                            <li>Geografía</li>
                            <li>Historia</li>
                        </ul>

                    </td>

                    <td>
                        <small class="js-lists-values-type text-50">Esta es la categoría de ciencias sociales</small>
                    </td>

                    <td>
                        <a class="btn btn-primary" asp-controller="Users" asp-action="EditCategorie">
                            <i class="material-icons">create</i>
                        </a>

                        <a class="btn btn-accent" asp-controller="Users" asp-action="DeleteCategorie">
                            <i class="material-icons">close</i>
                        </a>
                    </td>
                    <td class="text-right">
                    </td>
                </tr>

            </tbody>
        </table>
    </div>

    <div class="card-footer p-8pt">

        <ul class="pagination justify-content-start pagination-xsm m-0">
            <li class="page-item disabled">
                <a class="page-link"
                   href="#"
                   aria-label="Previous">
                    <span aria-hidden="true"
                          class="material-icons">chevron_left</span>
                    <span>Anterior</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link"
                   href="#"
                   aria-label="Page 1">
                    <span>1</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link"
                   href="#"
                   aria-label="Page 2">
                    <span>2</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link"
                   href="#"
                   aria-label="Next">
                    <span>Siguiente</span>
                    <span aria-hidden="true"
                          class="material-icons">chevron_right</span>
                </a>
            </li>
        </ul>

    </div>
    <!-- <div class="card-body bordet-top text-right">
      15 <span class="text-50">of 1,430</span> <a href="#" class="text-50"><i class="material-icons ml-1">arrow_forward</i></a>
    </div> -->

</div>