@{
    ViewData["Title"] = "Editar Categoría";
    Layout = "_Admin";
}
<div class="page-separator">
    <div class="page-separator__text">Matematica</div>
</div>
<div class="card js-overlay card-sm overlay--primary-dodger-blue stack stack--1">
    <div class="card-body d-flex flex-column">
        <form asp-action="EditCategorie" class="align-items-center">
            <div class="flex"
                 style="max-width: 100%">

                <div class="form-group">
                    <label class="form-label"
                           for="identificacion">Nombre:</label>
                    <input type="text"
                           class="form-control"
                           id="nombre"
                           name="name"
                           value="Matematica">
                </div>
                <div class="form-group">
                    <label class="form-label"
                           for="descripcion">Descripción:</label>
                    <textarea class="form-control"
                              id="descripcion">Esta es la categoria de matematicas</textarea>
                </div>
                <div class="form-group">
                    <label class="form-label">Subcategoría</label>
                    <select class="form-control">
                        <option value="-1">Es una categoría padre</option>
                        <option value="1">Matematica</option>
                        <option value="2">Ciencias</option>
                        <option value="3">Ciencias Sociales</option>
                    </select>
                    <small class="form-text text-muted">Seleccionar la opción 'Es una categoría padre' para crear como principal, sino seleccionar algunas de las categorías para que se cree como subcategoría. </small>
                </div>
                <button type="submit"
                        class="btn btn-primary">
                    Editar
                </button>
                <a asp-controller="Topics" asp-action="CategoriesList" class="btn btn-accent">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
