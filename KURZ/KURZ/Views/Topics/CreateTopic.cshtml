@{
    ViewData["Title"] = "Agregar Tema";
    Layout = "_Admin";
}
<div class="card js-overlay card-sm overlay--primary-dodger-blue stack stack--1">
    <div class="card-body d-flex flex-column">
        <form asp-action="CreateTopic" class="align-items-center">
            <div class="flex"
                 style="max-width: 100%">

                <div class="form-group">
                    <label class="form-label"
                           for="identificacion">Nombre:</label>
                    <input type="text"
                           class="form-control"
                           id="nombre"
                           name="name"
                           placeholder="Ingrese el nombre del tema">
                </div>
                <div class="form-group">
                    <label class="form-label"
                           for="descripcion">Descripción:</label>
                    <textarea class="form-control"
                              id="descripcion"
                              placeholder="Ingrese una descripción para el tema"></textarea>
                </div>
                <div class="form-group">
                    <label class="form-label">Categoría</label>
                    <select class="form-control">
                        <option value="-1">Seleccione una categoría</option>
                        <option value="1">Matematica</option>
                        <option value="2">Ciencias</option>
                        <option value="3">Ciencias Sociales</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Subcategoría</label>
                    <select class="form-control">
                        <option value="-1">Seleccione una subcategoría</option>
                        <option value="1">Algebra</option>
                        <option value="2">Trigonometria</option>
                    </select>
                 </div>

                <button type="submit"
                        class="btn btn-primary">
                    Crear
                </button>
                <a asp-controller="Topics" asp-action="TopicsList" class="btn btn-accent">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
