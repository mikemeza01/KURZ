<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible"
          content="IE=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - KURZ</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700%7CRoboto:400,500%7CExo+2:600&display=swap"
          rel="stylesheet">
    <!-- Preloader -->
    <link href="~/vendor/spinkit.css" rel="stylesheet" asp-append-version="true"/>
    <!-- Perfect Scrollbar -->
    <link href="~/vendor/perfect-scrollbar.css" rel="stylesheet" asp-append-version="true" />
    <!-- Material Design Icons -->
    <link href="~/css/material-icons.css" rel="stylesheet" asp-append-version="true" />
    <!-- Font Awesome Icons -->
    <link href="~/css/fontawesome.css" rel="stylesheet" asp-append-version="true" />
    <!-- Preloader -->
    <link href="~/css/preloader.css" rel="stylesheet" asp-append-version="true" />
    <!-- App CSS -->
    <link href="~/css/app.css" rel="stylesheet" asp-append-version="true" />

</head>
<body class="layout-sticky-subnav layout-learnly">
    <div class="preloader">
        <div class="sk-chase">
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
        </div>
    </div>

    <!-- Header Layout -->
    <div class="mdk-header-layout js-mdk-header-layout">

        <!-- Header -->

        <div id="header" class="mdk-header js-mdk-header mb-0" data-fixed data-effects="waterfall">
            <div class="mdk-header__content">

                <div class="navbar navbar-expand navbar-light bg-white navbar-shadow" id="default-navbar" data-primary>
                    <div class="container page__container">
                        <!-- Navbar Brand -->
                        <a href="index.html" class="navbar-brand pt-2 pb-2 mr-16pt">
                            <img src="~/images/kurz-v2-2.jpg" />
                        </a>
                        <ul class="nav navbar-nav ml-auto mr-0">
                            <li class="nav-item">
                                <a asp-controller="Authentication" asp-action="Login"
                                   class="btn btn-outline-kurz">Iniciar Sesión</a>
                            </li>
                        </ul>

                    </div>
                </div>

            </div>
        </div>

        <!-- // END Header -->

        @RenderBody()

        <!-- Footer -->

        <div class="footer border-top-2 mt-auto">
            <div class="container page__container page-section">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <p class="brand mb-24pt">
                            <img src="~/images/kurz-v2-2.jpg" />
                        </p>
                        <p class="measure-lead-max text-white small mr-8pt">KURZ - Es la plaforma ideal para que puedas tener asesoría en cualquier tema.</p>
                    </div>
                    <div class="col-sm-6 col-md-4">
                        <h3>Soporte</h3>
                        <p class="mb-8pt">
                            <a href=""
                               class="text-white text-underline-n mr-8pt small">Política de Privacidad</a>
                        </p>
                        <p class="mb-8pt">
                            <a href=""
                               class="text-white text-underline-n mr-8pt small">Términos y Condiciones</a>
                        </p>
                    </div>
                    <div class="col-sm-6 col-md-4 contact-info">
                        <h3>Contacto</h3>
                        <p class="info text-white">
                            <i class="fa fa-map-marker-alt"></i> <span>Oficentro La Sabana Torre 6, Piso 7 San José, Costa Rica</span>
                         </p>
                        <p class="info text-white">
                            <i class="fa fa-phone"></i> <span><a class="text-white text-underline-n" href="tel:+50687154089">(+506) 8715 4089</a></span>
                        </p>
                        <p class="info text-white">
                            <i class="fa fa-envelope"></i> <span><a class="text-white text-underline-n" href="mailto:info@educandoteya.org">info@kurz.com</a></span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright mt-auto">
            <div class="container page__container page-section d-flex flex-column">
                <p class="text-white small mt-n1 mb-0">Copyright 2023 &copy; All rights reserved.</p>
            </div>
       </div>

        <!-- // END Footer -->

    </div>
    <!-- // END Header Layout -->

    <!-- jQuery -->
    <script src="~/vendor/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/vendor/popper.min.js"></script>
    <script src="~/vendor/bootstrap.min.js"></script>
    <!-- Perfect Scrollbar -->
    <script src="~/vendor/perfect-scrollbar.min.js"></script>

    <!-- DOM Factory -->
    <script src="~/vendor/dom-factory.js"></script>

    <!-- MDK -->
    <script src="~/vendor/material-design-kit.js"></script>

    <!-- App JS -->
    <script src="~/js/app.js"></script>

    <!-- Preloader -->
    <script src="~/js/preloader.js"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

